<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title') %></h1>

<%= link_to t('.new_order'), new_order_path, class: 'btn btn-outline-success btn-sm' %>
<br><br>

<table class='order'>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.address') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.pay_type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
